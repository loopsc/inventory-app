<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/formStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.js-example-basic-multiple').select2({
                allowClear: true
            });
        });
    </script>


</head>

<body>
    <main class="content">
        <%- include('./partials/navbar') %>

            <form action="/new" method="POST" class="form">
                <div class="inputGroup">
                    <label for="title">Title: </label>
                    <input type="text" name="title" id="title" placeholder="Beyond Good and Evil" required>
                </div>
                <div class="inputGroup">
                    <label for="author">Author: </label>
                    <input type="text" name="author" id="author" placeholder="Friedrich Nietzsche" required>
                </div>
                <div class="inputGroup">
                    <label for="genres">Generes: </label>
                    <select style="width: 100%;" class="js-example-basic-multiple" name="genres" id="genres" multiple>
                        <option value="fantasy">Fantasy</option>
                        <option value="scifi">Sci-Fi</option>
                        <option value="mystery">Mystery</option>
                    </select>
                </div>
                <fieldset>
                    <legend>Fiction or Non-fiction?</legend>

                    <label for="fiction">
                        <input type="radio" id="fiction" name="isFiction" value="fiction" required>
                        Fiction
                    </label>

                    <label for="non-fiction">
                        <input type="radio" id="non-fiction" name="isFiction" value="non-fiction">
                        Non-fiction</label>
                </fieldset>
                <fieldset>
                    <legend>Have you read this book?</legend>
                    <label for="read">
                        <input type="radio" id="read" name="isRead" value="read" required>
                        Read
                    </label>
                    <label for="no-read">
                        <input type="radio" id="no-read" name="isRead" value="no-read">
                        Not Read
                    </label>
                </fieldset>
                <button type="submit">Add</button>
            </form>
    </main>

</body>

</html>